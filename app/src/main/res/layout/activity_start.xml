<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/main_theme"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/NJ"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="165dp"
        android:text="NJ"
        android:textAlignment="center"
        android:textColor="#AFAEAB"
        android:typeface="serif"
        android:textSize="50dp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="0dp"
        android:drawableLeft="@drawable/messenger_bubble_small_white"
        android:textColor="@color/white"
        android:hint="   Эл. Почта"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/messenger_bubble_small_white"
        android:hint="    Пароль"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogin"
        android:background="@drawable/button_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="16dp"
        android:text="Войти"
        android:textColor="@color/white"
        android:typeface="serif" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnForgotPassword"
        android:layout_width="378dp"
        android:layout_height="32dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_marginTop="23dp"
        android:background="@drawable/button_main"
        android:text="Забыл пароль"
        android:textColor="@color/white"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/buttonRegister"
        android:layout_width="69dp"
        android:layout_height="42dp"
        android:layout_below="@+id/or_select"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/button_main"
        android:drawablePadding="20dp"
        android:src="@drawable/logo_googleg_color_18dp"
        android:textColor="@color/white"
        android:typeface="serif" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/or_select"
        android:layout_marginTop="-21dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/or_select"
        android:layout_width="88dp"
        android:layout_height="54dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="150dp"
        android:text="ИЛИ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/reg_text"
        android:layout_width="247dp"
        android:layout_height="29dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="91dp"
        android:text="Регистрация через"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        android:typeface="serif"/>

</RelativeLayout>
